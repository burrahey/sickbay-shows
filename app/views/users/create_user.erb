<h2 class="center">Create An Account</h2>
<form method="POST" action="/users">
  <p>
    <% if @errors && @errors[:username] %>
      <label for="username" style="color: violet;">
        <%= @errors[:username] %>
      </label>
    <% else %>
      <label for="username">
        Username:
      </label>
    <% end %>
    <input
      type="text"
      name="username"
      id="username"
      autocomplete="off"
      value="<%= @user.username %>"
    />
  </p>

  <p>
    <% if @errors && @errors[:email] %>
      <label for="email" style="color: violet;">
        <%= @errors[:email] %>
      </label>
    <% else %>
      <label for="email">
        Email:
      </label>
    <% end %>
    <input
      type="email"
      name="email"
      id="email"
      value="<%= @user.email %>"
    />
  </p>

  <p>
    <% if @errors && @errors[:password] %>
      <label for="password" style="color: violet;">
        <%= @errors[:password] %>
      </label>
    <% else %>
      <label for="password">
        Password:
      </label>
    <% end %>
    <input
      type="password"
      name="password"
      id="password"
    />
  </p>

  <p>
    <% if @errors && @errors[:confirm_password] %>
      <label for="confirm_password" style="color: violet;">
        <%= @errors[:confirm_password] %>
      </label>
    <% else %>
      <label for="confirm_password">
        Confirm Password:
      </label>
    <% end %>
    <input type="password" name="confirm_password" id="confirm_password">
  </p>

  <input type="submit" value="SUBMIT">

</form>
