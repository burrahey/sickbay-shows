<h2>Edit User</h2>

<form method="POST" action="/settings">
<input id="hidden" type="hidden" name="_method" value="patch">

  <p>
    <% if @errors && @errors[:username] %>
      <label for="username" style="color: violet;">
        <%= @errors[:username] %>
      </label>
    <% else %>
      <label for="username">
        Username:
      </label>
    <% end %>
    <input
      type="text"
      name="username"
      id="username"
      value="<%= current_user.username %>"
      autocomplete="off"
      />
  </p>

  <p>
    <% if @errors && @errors[:email] %>
      <label for="email" style="color: violet;">
        <%= @errors[:email] %>
      </label>
    <% else %>
      <label for="email">
        Email:
      </label>
    <% end %>
    <input
      type="email"
      name="email"
      id="email"
      value="<%= current_user.email %>"
      autocomplete="off"
      />
  </p>

  <p>
    <% if @errors && @errors[:password] %>
      <label for="password" style="color: violet;">
        <%= @errors[:password] %>
      </label>
    <% else %>
      <label for="password">
        Enter Password To Make Changes:
      </label>
    <% end %>
    <input
      type="password"
      name="password"
      id="password"
      />
  </p>

  <input type="submit" value="UPDATE" />
</form>

<p></p>

