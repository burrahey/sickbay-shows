<h2>Edit Show (ID: <%= @show.id %>)</h2>

<form method="POST" action="/shows/<%= @show.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">

<p>
  <% if @errors && @errors[:date] %>
    <label for="date" style="color: violet;">
      <%= @errors[:date] %>
    </label>
  <% else %>
    <label for="date">
      Date:
    </label>
  <% end %>
  <input
    type="date"
    name="date"
    id="date"
    value=<% if params[:date] && !@errors[:date] %>
    "<%= params[:date] %>"
    <% else %>
    "<%= @show.date %>"
    <% end %>
    autocomplete="off"
  />
</p>

<p>
  <% if @errors && @errors[:venue] %>
    <label for="venue" style="color: violet;">
      <%= @errors[:venue] %>
    </label>
  <% else %>
    <label for="venue">
      Venue:
    </label>
  <% end %>
  <input
    type="text"
    list="venues"
    name="venue" id="venue"
    value = <% if params[:venue] && !@errors[:venue] %>
    "<%= params[:venue] %>"
    <% else %>
    "<%= @show.venue.name %>"
    <% end %>
    autocomplete="off"
  />
  <datalist id="venues">
    <% Venue.all.order("lower(name)").each do |venue| %>
      <option value="<%= venue.name %>"><%= venue.name %></option>
    <% end %>
  </datalist>
</p>

<p>
  <% if @errors && @errors[:artists] %>
    <label for="artist1" style="color: violet;">
      <%= @errors[:artists] %>
    </label>
  <% else %>
    <label for="artist1">
      Artist 1:
    </label>
  <% end %>
  <input
    type="text"
    list="artists"
    name="artists[]"
    id="artist1"
    value = <% if params[:artists] && !@errors[:artists] %>
    "<%= params[:artists][0] if !params[:artists][0].empty? %>butt"
    <% else %>
    "<%= @show.artists[0].name if @show.artists[0] %>hole"
    <% end %>
    autocomplete="off"
  />
  <datalist id="artists">
    <% Artist.all.order("lower(name)").each do |artist| %>
      <option value="<%= artist.name %>"><%= artist.name %></option>
    <% end %>
  </datalist>
</p>

