<% if request.path_info == "/shows/archive" %>
  <h2>Show Archive</h2>
<% else %>
  <h2>Upcoming Shows</h2>
<% end %>

<table>
  <tr>
  <% @shows.each do |show| %>
    <td>
      <% if logged_in? %>
        <a href="/shows/<%= show.id %>">
      <% end %>

      <% if show.date.to_date.year != Date.today.year %>
        <%= show.date.to_date.strftime("%m.%d.%y") %>
      <% else %>
        <%= show.date.to_date.strftime("%m.%d") %>
      <% end %>
      </a>
    </td>

    <td class="details">
      <% if !show.url.nil? %>
      <a href="<%= show.url %>">
      <% end %>
      <%= show.artists.collect { |artist| artist.name }.join(" + ") %> at <%= show.venue.name %>
      </a>
    </td>
  </tr>
  <% end %>
</table>
