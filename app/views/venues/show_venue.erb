<h2>Shows at <%= @venue.name %></h2>

<table>
  <tr>
  <% @venue.shows.order(:date).each do |show| %>
    <td>
      <% if logged_in? %>
      <a href="/shows/<%= show.id %>">
      <% end %>
      <%= show.date.to_date.strftime("%m.%d") %>
      </a>
    </td>
    <td class="details">
      <% if !show.url.nil? %>
      <a href="<%= show.url %>">
      <% end %>
      <%= show.artists.collect { |artist| artist.name }.join(" + ") %>
      </a>
    </td>
  </tr>
  <% end %>
</table>

<% if logged_in? %>
<h3><a href="/venues/<%= @venue.slug %>/edit">Edit <%= @venue.name %></a></h3>
<% end %>
