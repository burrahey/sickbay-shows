  <input id="hidden" type="hidden" name="_method" value="delete">

  <p>
    <label for="password">Enter Password to Delete Venue:</label>
    <input
      type="password"
      name="password"
      id="password"
      required />
  </p>

  <input type="submit" value="DELETE VENUE"></p>
</form></p>
