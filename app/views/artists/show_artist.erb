<h2><%= @artist.name %> Shows</h2>

<table>
  <tr>
  <% @artist.shows.order(:date).each do |show| %>
    <td><%= show.date.to_date.strftime("%m.%d") %></td>
    <td class="details"><a href="<%= show.url %>"><%= show.artists.collect { |artist| artist.name }.join(" + ") %></a> at <%= show.venue.name %></td>
  </tr>
  <% end %>
</table>
